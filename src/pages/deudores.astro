---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Deudores">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Deudores</h2>

    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div>
          <p class="text-gray-600">
            Lista de clientes con ventas a crédito pendientes de pago. Los montos se muestran según la tasa usada al momento de la venta.
          </p>
        </div>
        <button
          id="btn-recargar-deudores"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
        >
          Recargar
        </button>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Cédula</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Nombre</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Teléfono</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Total Deuda Bs</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Total Deuda USD</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody id="tabla-deudores" class="bg-white divide-y divide-gray-200">
            <tr>
              <td colspan="6" class="px-4 py-8 text-center text-gray-500">No hay deudores registrados</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Modal Pagar Deudor -->
    <div id="modal-pago" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-2xl font-bold mb-4">Pagar Deuda</h3>
        <div class="mb-3">
          <p class="text-sm text-gray-600">
            Cliente: <span id="pago-nombre" class="font-semibold text-gray-800"></span>
          </p>
          <p class="text-sm text-gray-600">
            Cédula: <span id="pago-cedula" class="font-mono"></span>
          </p>
          <p class="text-sm text-gray-600">
            Total pendiente: <span id="pago-total-usd" class="font-semibold text-blue-700"></span> USD
          </p>
        </div>
        <div class="space-y-3 mb-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Tasa de dólar para el pago (Bs)</label>
            <input
              type="number"
              id="pago-tasa"
              min="0"
              step="0.01"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <p class="text-xs text-gray-500">
            El total en bolívares se calculará como <strong>total USD × tasa del día</strong>.
          </p>
          <p id="pago-total-bs-preview" class="text-sm font-semibold text-green-700"></p>
        </div>
        <div class="flex gap-3">
          <button
            id="btn-confirmar-pago"
            class="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
          >
            Confirmar Pago
          </button>
          <button
            type="button"
            id="btn-cerrar-pago"
            class="flex-1 px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400"
          >
            Cancelar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    let deudores = [];
    let deudorActual = null;

    async function cargarDeudores() {
      try {
        const res = await fetch('/api/deudores');
        const data = await res.json();
        if (data.success) {
          deudores = data.data || [];
          renderizarDeudores();
        } else {
          alert('Error cargando deudores: ' + (data.error || 'desconocido'));
        }
      } catch (error) {
        console.error('Error cargando deudores:', error);
        alert('No se pudieron cargar los deudores.');
      }
    }

    function renderizarDeudores() {
      const tbody = document.getElementById('tabla-deudores');
      if (!deudores || deudores.length === 0) {
        tbody.innerHTML =
          '<tr><td colspan="6" class="px-4 py-8 text-center text-gray-500">No hay deudores registrados</td></tr>';
        return;
      }

      tbody.innerHTML = deudores
        .map(
          (d, index) => `
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3 whitespace-nowrap text-sm">${d.cedula || '-'}</td>
          <td class="px-4 py-3 whitespace-nowrap text-sm">${d.nombre}</td>
          <td class="px-4 py-3 whitespace-nowrap text-sm">${d.telefono || '-'}</td>
          <td class="px-4 py-3 whitespace-nowrap text-sm font-medium">${parseFloat(d.total_bs).toFixed(2)} Bs</td>
          <td class="px-4 py-3 whitespace-nowrap text-sm font-medium">$${parseFloat(d.total_usd).toFixed(2)}</td>
          <td class="px-4 py-3 whitespace-nowrap text-sm">
            <div class="flex flex-col sm:flex-row gap-2">
              <button
                data-index="${index}"
                class="btn-agregar px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs"
              >
                Agregar productos
              </button>
              <button
                data-index="${index}"
                class="btn-pagar px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700 text-xs"
              >
                Pagar
              </button>
            </div>
          </td>
        </tr>
      `
        )
        .join('');

      document.querySelectorAll('.btn-agregar').forEach((btn) => {
        btn.addEventListener('click', () => {
          const idx = parseInt(btn.getAttribute('data-index'));
          const d = deudores[idx];
          if (!d || !d.cedula) return;
          // Redirigir a factura en modo deudor, reutilizando la lógica de búsqueda por cédula
          window.location.href = `/factura?cedula=${encodeURIComponent(d.cedula)}&modo=deudor`;
        });
      });

      document.querySelectorAll('.btn-pagar').forEach((btn) => {
        btn.addEventListener('click', () => {
          const idx = parseInt(btn.getAttribute('data-index'));
          abrirModalPago(deudores[idx]);
        });
      });
    }

    function abrirModalPago(deudor) {
      if (!deudor) return;
      deudorActual = deudor;
      document.getElementById('pago-nombre').textContent = deudor.nombre;
      document.getElementById('pago-cedula').textContent = deudor.cedula || '-';
      document.getElementById('pago-total-usd').textContent = parseFloat(deudor.total_usd).toFixed(2);
      document.getElementById('pago-tasa').value = '';
      document.getElementById('pago-total-bs-preview').textContent = '';
      document.getElementById('modal-pago').classList.remove('hidden');
    }

    function cerrarModalPago() {
      deudorActual = null;
      document.getElementById('modal-pago').classList.add('hidden');
    }

    async function confirmarPago() {
      if (!deudorActual) return;

      const tasa = parseFloat(document.getElementById('pago-tasa').value);
      if (!tasa || tasa <= 0) {
        alert('Ingrese una tasa válida para el pago.');
        return;
      }

      if (!confirm('¿Confirmar el pago completo de la deuda de este cliente?')) {
        return;
      }

      try {
        const res = await fetch('/api/deudores', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            cedula: deudorActual.cedula,
            tasa_pago: tasa
          })
        });
        const data = await res.json();
        if (data.success) {
          alert('Pago registrado correctamente.');
          cerrarModalPago();
          cargarDeudores();
        } else {
          alert('Error al registrar pago: ' + (data.error || 'desconocido'));
        }
      } catch (error) {
        console.error('Error al registrar pago:', error);
        alert('No se pudo registrar el pago.');
      }
    }

    function actualizarPreviewPago() {
      if (!deudorActual) return;
      const tasa = parseFloat(document.getElementById('pago-tasa').value);
      const preview = document.getElementById('pago-total-bs-preview');
      if (!tasa || tasa <= 0) {
        preview.textContent = '';
        return;
      }
      const totalUsd = parseFloat(deudorActual.total_usd);
      const totalBs = totalUsd * tasa;
      preview.textContent = `Total a pagar: ${totalBs.toFixed(2)} Bs (sobre ${totalUsd.toFixed(2)} USD)`;
    }

    function inicializarDeudores() {
      document.getElementById('btn-recargar-deudores').addEventListener('click', cargarDeudores);
      document.getElementById('btn-cerrar-pago').addEventListener('click', cerrarModalPago);
      document.getElementById('btn-confirmar-pago').addEventListener('click', confirmarPago);
      document.getElementById('pago-tasa').addEventListener('input', actualizarPreviewPago);
      cargarDeudores();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', inicializarDeudores);
    } else {
      inicializarDeudores();
    }
  </script>
</Layout>


